<% if user_signed_in? %>
<div class="panel panel-default post-form-panel">
  	<div class="panel-body row">
  		<div class="col-sm-1">
  			<img src="/man.png"></img>
  		</div>
  		<div class="col-sm-11">
  			<%= form_for(@newPost) do |f| %>
  					<div class="field" style="margin-left:10px;">
    					<%= f.text_field :content, autofocus: true, class:"form-control" %>
    					<span type="button" class="btn btn-primary navbar-btn button-control" style="float:right; margin-top: 7px;"><%= f.submit "Tweet"%></span>
  					</div>
			<% end %>
  		</div>
  		<div class="col-sm-12">
  		</div>
  	</div>
</div>	
<% end %>